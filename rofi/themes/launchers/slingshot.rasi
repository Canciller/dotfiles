configuration {
    show-icons: true;
    hide-scrollbar: true;
    icon-theme: "Papirus";
    display-drun: "ï€‚";
    drun-display-format: "{name}";
    threads: 0;
    scroll-method: 0;
}

@import "./colors.rasi"

* {
    icon-font: "SauceCodePro Nerd Font 15";
    text-font: "Noto Sans 14";
}

* {
    background-color: transparent;
    text-color: @foreground;
    font: @text-font;
}

window {
    transparency: "real";
    background-color: @background;
    fullscreen: true;
    padding: 12%;
}

mainbox {
  children: [ inputbar, listview ];
  background-color: transparent;
}

inputbar {
    children: [prompt, entry];
    margin: 0px 25% 100px 25%;
    padding: 25px;
    border: 1px;
    border-radius: 6px;
    border-color: @foreground;
}

prompt {
    font: @icon-font;
    background-color: inherit;
    padding: 0px 20px 0px 0px;
}

entry {
    placeholder: "Search";
    background-color: inherit;
}

listview {
    columns: 7;
    spacing: 10px;
    cycle: false;
    dynamic: true;
    layout: vertical;
}

element {
  orientation: vertical;
  border-radius: 10px;
  padding: 50px 50px 50px 50px;
}

element-icon {
    size: 180px;
    margin: 0 0 10px 0;
}

element-text {
    horizontal-align: 0.5;
    vertical-align: 0.5;
    expand: true;
}

element.selected {
    background-color: @background-light;
}