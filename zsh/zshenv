function path {
	case ":$PATH:" in
	  *":$1:"*) :;; # already there
	  *) PATH="$1:$PATH";; # or PATH="$PATH:$new_entry"
	esac
}

function command_exists {
	[ -z "$1" ] && return 1

	arr=($1)
	for i in "$@"; do
	    command -v "$i" &>/dev/null || return 1
	done

	return 0
}

path /opt/cuda/bin
path /usr/local/bin
path /usr/local/sbin

path $HOME/.local/bin
path $HOME/.bin

path /opt/genymotion/tools

# gem
export GEM_HOME=$HOME/.gem
path $GEM_HOME/bin

# android
export ANDROID_HOME=$HOME/Library/Android/Sdk
path $ANDROID_HOME/emulator
path $ANDROID_HOME/tools
path $ANDROID_HOME/tools/bin
path $ANDROID_HOME/platform-tools

# java
path "/opt/homebrew/opt/openjdk/bin"

# volta
export VOLTA_HOME=$HOME/.volta
path $VOLTA_HOME/bin

export PATH

