# {{{ Variables

[colors]
background = #1a1b23
foreground = #fff

primary = #10121a
secondary = #fff

underline = #4c5067

alert = #f23131

[fonts]
font-0 = SauceCodePro Nerd Font:pixelsize=12;1
font-1 = SauceCodePro Nerd Font:pixelsize=16;2
