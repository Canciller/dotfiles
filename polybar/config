# {{{ Module date
[module/date]
type = internal/date
interval = 0

date = %a %b %d
date-alt = %A %B %d %Y

time = %I:%M %p
time-alt = %I:%M:%S %p

label =  %date%, %time%
label-padding = 2

label-background = ${colors.primary}
label-foreground = ${colors.secondary}
# }}}

